<h2>
  <%= @article.title %>
</h2>
 
<div>
  <%= @article.text.html_safe %>
</div>

<p>
	<span>By:</span>
  <%= @article.author %>
	<br />
	<span>Posted:</span>
  <%= @article.date %>
</p>

<hr />

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <div style="border: 1px solid #d4d4d4; padding: 10px; width: 400px; background: #f5f5f5; margin-bottom: 7px;">
    <p>
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>
   
    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
  </div>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter, 'Your Name' %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p>
	<%= link_to 'Back', articles_path %> | 
	<%= link_to 'Edit', edit_article_path(@article) %>
</p>